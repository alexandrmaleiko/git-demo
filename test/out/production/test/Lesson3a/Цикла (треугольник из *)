package sample;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int h;
        System.out.println("Введите число h");
        h = sc.nextInt();
        for (int i = 1; i <= h; i++)
            for (int j = 1; j <= h; j++) {
                if (j > i)
                    System.out.print(" ");
                else
                    System.out.print("*");
                    if (j >= h)
                        System.out.println();



                }

            }
    }


