//Нарисовать фигуру где есть 5 линий и вводимое число количество столбцов (7 к примеру)
//  ***---***---***---***
//  ***---***---***---***
//  ***---***---***---***
//  ***---***---***---***
//  ***---***---***---***


package sample;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);


        int h;

        System.out.println("Введите число h");
        h = sc.nextInt();
        for (int i = 1; i <= 5; i++) {  // горизонтальные строки начиная с 1 и заканчивая 5
            System.out.println();// переводя кажду строку на новую
            for (int j = 1; j <= h; j++) {  // количество вертикальных столбцов с 1 до введеного числа
                if (j % 2 == 0) //четные ---/ нечетные ***
                {
                    System.out.print("---");
                } else{
                    System.out.print("***");
                }

            }




            }
            //else {
            // System.out.print("*");
        }
    }

// Во всех таких задачах мысленно делим I на строки и столбцы J и делаем цикл в цикле









